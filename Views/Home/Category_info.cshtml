@model List<CategoryModel>
@{
    ViewData["Title"] = "Flower";
}

<link rel="stylesheet" href="~/css/category_more_info.css" asp-append-version="true" />

<div class="tool-section">
    @if (Model.Count ==0)
    {
        <h1>No data found</h1>
    }
    else
    {
        <h1>Flowers Information</h1>
        @foreach(var i in Model)
        {
            <div class="tools-content">
                <div class="tools-card-items">
                    <div class="tool-card">
                        <img src="@i.Image" width="450px" height="300px">
                        <div class="para-card">
                        <span>@i.Title</span>
                        <p>@i.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        
    }
    
</div>